<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource Primary}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="Padding" Value="20,15" />
        <Setter Property="MinimumHeightRequest" Value="50" />
        <Setter Property="MinimumWidthRequest" Value="48" />
        <Setter Property="Shadow">
            <Shadow Brush="Black" Opacity="0.3" Radius="10" Offset="0,4" />
        </Setter>
    </Style>

    <Style x:Key="AnswerButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource Surface}" />
        <Setter Property="TextColor" Value="{DynamicResource OnSurface}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="MinimumHeightRequest" Value="80" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="BorderColor" Value="{DynamicResource Primary}" />
        <Setter Property="Shadow">
            <Shadow Brush="Black" Opacity="0.2" Radius="8" Offset="0,2" />
        </Setter>
    </Style>

   
    <Style x:Key="CardStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{DynamicResource Surface}" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Shadow">
            <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="0,4" />
        </Setter>
    </Style>

    
    <Style x:Key="HeadingStyle" TargetType="Label">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{DynamicResource OnSurface}" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,10" />
    </Style>

    <Style x:Key="QuestionStyle" TargetType="Label">
        <Setter Property="FontSize" Value="36" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{DynamicResource OnSurface}" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,20" />
    </Style>

    <Style x:Key="HudTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{DynamicResource OnSurface}" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

</ResourceDictionary>
